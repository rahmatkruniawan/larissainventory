<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_barang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inventory.larissa.larissainventory.InputBarang"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:background="#6ce96a"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Barang"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Barang Masuk"
                android:id="@+id/noBarangMasuk"
                style="@android:style/Widget.Holo.EditText"
                android:singleLine="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Product"
                android:id="@+id/kodeBarang"
                android:singleLine="true"
                style="@android:style/Widget.Holo.EditText"/>
            <EditText
                android:id="@+id/namaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Product"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@android:style/Widget.Holo.EditText" />
            <EditText
                android:id="@+id/qtyBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:inputType="number"
                style="@android:style/Widget.Holo.EditText"
                android:singleLine="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="10"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="18dp"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Barang masuk"/>
                    <ImageView
                        android:onClick="setDate"
                        android:id="@+id/btnTanggal"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"/>
                </LinearLayout>
                <TextView
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:paddingLeft="8dp"
                    android:id="@+id/tanggalMasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - "/>
            </LinearLayout>
            <EditText
                android:id="@+id/kodeSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Supplier"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@android:style/Widget.Holo.EditText" />
            <EditText
                android:id="@+id/namaSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Supplier"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@android:style/Widget.Holo.EditText" />

            <EditText
                android:id="@+id/telpSupplier"
                style="@android:style/Widget.Holo.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telp Supplier"
                android:inputType="phone"
                android:singleLine="true" />
            <Button

                android:id="@+id/saveBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"/>

        </LinearLayout>
    </LinearLayout>


</ScrollView>
